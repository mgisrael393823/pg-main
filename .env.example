# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_PROJECT_ID=your_supabase_project_id

# Database Configuration (for local development)
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# HubSpot Integration
HUBSPOT_CLIENT_ID=your_hubspot_client_id
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret
HUBSPOT_PRIVATE_APP_TOKEN=your_hubspot_private_app_token
HUBSPOT_WEBHOOK_SECRET=your_hubspot_webhook_secret

# PropStream Configuration (if applicable)
PROPSTREAM_API_KEY=your_propstream_api_key
PROPSTREAM_API_URL=https://api.propstream.com/v1

# Cook County Assessor API
COOK_COUNTY_API_KEY=your_cook_county_api_key
COOK_COUNTY_API_URL=https://datacatalog.cookcountyil.gov/resource

# Geocoding Services
OPENSTREETMAP_API_URL=https://nominatim.openstreetmap.org
GOOGLE_MAPS_API_KEY=your_google_maps_api_key (optional)

# Redis Cache (for production)
REDIS_URL=your_redis_connection_string
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=noreply@your-domain.com

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="PorterGoldberg MVP"
NEXT_PUBLIC_APP_DESCRIPTION="Real Estate Platform"

# Security
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# Analytics & Monitoring
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id
SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=csv,xlsx,json

# Pagination Defaults
DEFAULT_PAGE_SIZE=25
MAX_PAGE_SIZE=100

# Map Configuration
NEXT_PUBLIC_DEFAULT_MAP_ZOOM=10
NEXT_PUBLIC_DEFAULT_MAP_CENTER_LAT=41.8781
NEXT_PUBLIC_DEFAULT_MAP_CENTER_LNG=-87.6298

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development